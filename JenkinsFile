pipeline {
    agent {
        label 'agent1'
    }

    stages {
        stage('Checkout') {
            steps {
                
                git branch: 'main', credentialsId: 'githubcredentials', url: 'https://github.com/j-rin/java_sql.git'

                
                

                
            }
        }
        stage('build') {
            steps {
                script{
                sh "whoami"
                sh "docker build -t jerinpaul/jenkins-app:latest ."
                }
                
            }
        }
        stage('push to dockerhub') {
            steps {
                script{
                sh "docker login"
                sh "docker push jerinpaul/jenkins-app:latest"
                }
                
            }
        }
       
            
    }
         
        
}
 
